# Variables de entorno para el servidor - PLANTILLA
# Copia este archivo como .env.production y completa con tus valores reales

# ========================================
# SERVIDOR
# ========================================
PORT=3001
NODE_ENV=production

# ========================================
# BASE DE DATOS
# ========================================
# MongoDB URI - REEMPLAZAR con tu URI real
MONGODB_URI=mongodb+srv://usuario:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# ========================================
# CORS Y FRONTEND
# ========================================
# URLs del frontend para CORS - REEMPLAZAR con tus dominios
FRONTEND_URL=https://tu-dominio.com,https://www.tu-dominio.com
CORS_ORIGIN=https://tu-dominio.com,https://www.tu-dominio.com

# ========================================
# JWT CONFIGURATION
# ========================================
# REEMPLAZAR con un secret fuerte generado (usar crypto.randomBytes(64).toString('hex'))
JWT_SECRET=tu-jwt-secret-super-seguro-aqui
JWT_EXPIRES_IN=1d
JWT_COOKIE_EXPIRES_IN=1

# ========================================
# EMAIL CONFIGURATION
# ========================================
# REEMPLAZAR con tu configuraci√≥n de email
EMAIL_FROM=info@tu-dominio.com
EMAIL_HOST=tu-servidor-email.com
EMAIL_PORT=465
EMAIL_USERNAME=tu-usuario-email
EMAIL_PASSWORD=tu-password-email

# ========================================
# SECURITY
# ========================================
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=30

# ========================================
# API EXTERNA
# ========================================
# REEMPLAZAR con tu token de API si usas servicios externos
APIPERU_TOKEN=tu-token-api-aqui